<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/workoutFragment">

    <fragment
        android:id="@+id/workoutFragment"
        android:name="ie.wit.work_iot_mobile.fragments.WorkoutFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_workout" >
        <action
            android:id="@+id/action_workoutFragment_to_reportFragment"
            app:destination="@id/reportFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/workoutFragment" />
    </fragment>
    <fragment
        android:id="@+id/reportFragment"
        android:name="ie.wit.work_iot_mobile.fragments.ReportFragment"
        android:label="@string/reportTitle"
        tools:layout="@layout/fragment_report" >
        <action
            android:id="@+id/action_reportFragment_to_workoutFragment"
            app:destination="@id/workoutFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/reportFragment" />
    </fragment>
</navigation>